{
	"name": "@as-com/bns",
	"version": "0.0.18",
	"description": "DNS bike-shed -- Now with types!",
	"private": false,
	"keywords": [
		"bns",
		"dns",
		"udp",
		"tcp"
	],
	"license": "MIT",
